        upsellAddToCart: {{ 'products.general.upsell_add_to_cart' | t | json }},
        free: {{ 'general.money.free' | t | json }},
        swatchesColor: {{ 'general.swatches.color' | t | json }},
        sku: {{ 'products.product.sku' | t | json }},
      },
      settings: {
